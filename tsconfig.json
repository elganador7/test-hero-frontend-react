{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "vite/client"],
      "typeRoots": [
        "./node_modules/@types",
        "./src/tests/types"
      ]
    },
    "include": ["src"]
  }
  